// ─────────────────────────────────────────────────────────────────
// Prisma Schema — SaaS Multi-Tenant Academy Management System
// Tenant isolation: Row-level via academyId FK on every resource
// ─────────────────────────────────────────────────────────────────

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/saas-client"
}

datasource db {
  provider = "postgresql"
}

// ─────────────────────────────────────────────
// Enums
// ─────────────────────────────────────────────

enum SaasRole {
  SUPER_ADMIN // platform-level, no academyId
  ADMIN       // academy owner/manager
  TEACHER     // academy teacher
  STUDENT     // academy student
}

enum AcademyStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

// ─────────────────────────────────────────────
// 1. Academy (테넌트 루트)
// ─────────────────────────────────────────────

model Academy {
  id        String        @id @default(uuid())
  name      String
  code      String        @unique // 가입 시 사용하는 유니크 코드
  status    AcademyStatus @default(ACTIVE)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  users     SaasUser[]
  auditLogs AuditLog[]

  @@index([code])
  @@index([status])
  @@map("academies")
}

// ─────────────────────────────────────────────
// 2. SaasUser
// ─────────────────────────────────────────────

model SaasUser {
  id           String     @id @default(uuid())
  academyId    String?    // null only for SUPER_ADMIN
  role         SaasRole   @default(STUDENT)
  name         String
  email        String     @unique
  passwordHash String
  status       UserStatus @default(ACTIVE)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  academy         Academy?   @relation(fields: [academyId], references: [id], onDelete: Cascade)
  refreshTokens   RefreshToken[]
  auditLogsActor  AuditLog[] @relation("AuditActor")

  @@index([academyId, status])
  @@index([email])
  @@index([role])
  @@map("saas_users")
}

// ─────────────────────────────────────────────
// 3. RefreshToken
// ─────────────────────────────────────────────

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  tokenHash String   @unique // SHA-256 of raw token
  expiresAt DateTime
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  ip        String?
  userAgent String?

  user SaasUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokenHash])
  @@map("refresh_tokens")
}

// ─────────────────────────────────────────────
// 4. AuditLog
// ─────────────────────────────────────────────

model AuditLog {
  id          String   @id @default(uuid())
  actorUserId String?
  academyId   String?
  action      String   // e.g. "user.create", "academy.suspend"
  targetType  String?  // "user" | "academy"
  targetId    String?
  metadata    Json?    // extra info
  ip          String?
  createdAt   DateTime @default(now())

  actor   SaasUser? @relation("AuditActor", fields: [actorUserId], references: [id], onDelete: SetNull)
  academy Academy?  @relation(fields: [academyId], references: [id], onDelete: SetNull)

  @@index([actorUserId])
  @@index([academyId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}
