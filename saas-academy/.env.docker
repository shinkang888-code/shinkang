# ─── Docker runtime environment ───────────────────────────────────────────────
# Copy this to .env.docker and fill in secrets before running docker compose up

# ── Postgres ──────────────────────────────────────────────────────────────────
POSTGRES_DB=saas_academy
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ── App Database URL (service-name host) ──────────────────────────────────────
DATABASE_URL="postgresql://postgres:postgres123@postgres:5432/saas_academy?schema=public"

# ── JWT ───────────────────────────────────────────────────────────────────────
# IMPORTANT: replace both secrets with 64-byte random hex strings in production
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET="docker_dev_access_secret_replace_in_prod_xxxxxxxxxx"
JWT_REFRESH_SECRET="docker_dev_refresh_secret_replace_in_prod_xxxxxxxxx"
JWT_ACCESS_EXPIRES="15m"
JWT_REFRESH_EXPIRES="7d"

# ── App ───────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_URL="http://localhost:3000"
NODE_ENV="production"

# ── Seed ──────────────────────────────────────────────────────────────────────
SEED=false
SEED_SUPER_ADMIN_EMAIL="super@admin.com"
SEED_SUPER_ADMIN_PASSWORD="SuperAdmin1234!"

# ── Kakao (Part 3 – fill when ready) ─────────────────────────────────────────
KAKAO_API_KEY=""
KAKAO_SENDER_KEY=""
KAKAO_TEMPLATE_CODE_INVITE=""
KAKAO_TEMPLATE_CODE_PAYMENT=""
KAKAO_TEMPLATE_CODE_WELCOME=""

# ── Security ──────────────────────────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10
LOGIN_LOCKOUT_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION_MS=900000

# ── pgAdmin (optional) ────────────────────────────────────────────────────────
PGADMIN_EMAIL=admin@local.dev
PGADMIN_PASSWORD=pgadmin123
DIRECT_URL="postgresql://postgres:postgres123@postgres:5432/saas_academy?schema=public"
